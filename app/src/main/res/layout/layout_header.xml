<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/red"
    android:padding="24dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:textAlignment="textStart"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="@dimen/font_title_header_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/label_story_author"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_3p_24"
            android:drawablePadding="@dimen/layout_story_author_drawable_padding_left"
            android:textColor="@color/white"
            android:maxLength="10"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="textStart"
            android:textSize="@dimen/font_author_header_size"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/label_story_created_at"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/font_created_at_header_size"
            android:layout_marginEnd="8dp"
            android:textAlignment="textStart"
            app:drawableStartCompat="@drawable/ic_baseline_access_time_filled_24"
            android:drawablePadding="@dimen/layout_story_author_drawable_padding_left"
            android:maxLines="1"
            tools:ignore="RelativeOverlap" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/label_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_baseline_folder_special_24"
            android:drawablePadding="@dimen/layout_story_author_drawable_padding_left"
            android:textColor="@color/white"
            android:maxLength="10"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="textStart"
            android:textSize="@dimen/font_author_header_size"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/label_score"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/font_created_at_header_size"
            android:layout_marginEnd="8dp"
            android:textAlignment="textStart"
            app:drawableStartCompat="@drawable/ic_baseline_bookmark_added_24"
            android:drawablePadding="@dimen/layout_story_author_drawable_padding_left"
            android:maxLines="1"
            tools:ignore="RelativeOverlap" />
    </LinearLayout>

</LinearLayout>