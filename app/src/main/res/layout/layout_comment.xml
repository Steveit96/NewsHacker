<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="@dimen/layout_story_card_radius"
        android:elevation="2dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_comment_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_comment_author_size"
                android:textColor="@color/green"
                android:maxLines="1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txt_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_comment_text_size"
                android:textColor="@color/dark_grey"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/btn_comment"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textColor="@color/blue"
                android:layout_gravity="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:layout_marginTop="12dp"
                android:textSize="@dimen/font_comment_button_size"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>